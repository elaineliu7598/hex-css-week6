    <title><%- title %></title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Icons">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <link rel="stylesheet" href="./assets/style/all.css">
  </head>

  <body>
    <!-- ---------- header ------------- -->
    <header class="header">
      <div class="header-content container d-flex justify-content-between justify-content-md-end position-relative py-7 py-md-9">
        <a href="#" class="invisible"></a>
        <h1 class="fs-4 position-absolute top-50 start-50 translate-middle"><a href="./index.html">EXHIBINECTION</a></h1>
        <ul class="d-flex mb-0">
          <li><a href="#" class="d-none d-md-block text-dark me-11">Sign in</a></li>
          <li><a href="#" class="d-none d-md-block text-dark me-11">Sign up</a></li>
          <li class="pe-4 pe-md-0"><a href="#" class="confirmation_number text-black position-relative" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><i class="material-icons">confirmation_number</i><span class="position-absolute top-10 start-100 translate-middle badge rounded-pill bg-secondary">3</span></a></li>
        </ul>
      </div>
    </header>

    <!-- ------------cart list - offcanvas------------- -->
    <div class="container">
      <div class="offcanvas offcanvas-end bg-black" data-bs-backdrop="false" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header pt-7 pb-1">
          <h2 id="offcanvasRightLabel" class="text-white ">Cart List</h2>
        </div>
        <div class="offcanvas-body py-2">
          <div class="card pt-12 pt-md-9 pb-5 pb-md-8 px-5 px-md-11 mb-2">
            <button type="button" class="btn-close position-absolute top-0 start-0 mt-1 mb-2 ms-1" aria-label="Close"></button>
            <div class="d-flex justify-content-between">
              <div>
                <img src="./assets/images/exhibition-1.jpg" alt="2020台味設計展" class="cart-img object-cover">
              </div>
              <div class="card-body py-0 ms-5">
                <h3 class="fs-6 fw-bold">2020 台味設計展</h3>
                <h4 class="fs-6">01 JUN — 31 OCT</h4>
                <h4 class="fs-6 text-dark">全票</h4>
                <h3 class="fs-5 fw-bold">NT$350</h3>
              </div>
              <div class="d-flex flex-column flex-md-row-reverse justify-content-center align-items-center">
                <button type="button" class="btn p-0"><i class="material-icons">add</i></button>
                <span class="fs-5 fw-bold py-1 px-md-3">01</span>
                <button type="button" class="btn p-0"><i class="material-icons">remove</i></button>
              </div>
            </div>
          </div>
          <div class="card pt-12 pt-md-9 pb-5 pb-md-8 px-5 px-md-11 mb-2">
            <button type="button" class="btn-close position-absolute top-0 start-0 mt-1 mb-2 ms-1" aria-label="Close"></button>
            <div class="d-flex justify-content-between">
              <div>
                <img src="./assets/images/exhibition-2.jpg" alt="No.22 線上設計展" class="cart-img object-cover">
              </div>
              <div class="card-body py-0 ms-5">
                <h3 class="fs-6 fw-bold">No.22 線上設計展</h3>
                <h4 class="fs-6">21 FEB — 30 NOV</h4>
                <h4 class="fs-6 text-dark">全票</h4>
                <h3 class="fs-5 fw-bold">NT$250</h3>
              </div>
              <div class="d-flex flex-column flex-md-row-reverse justify-content-center align-items-center">
                <button type="button" class="btn p-0"><i class="material-icons">add</i></button>
                <span class="fs-5 fw-bold py-1 px-md-3">01</span>
                <button type="button" class="btn p-0"><i class="material-icons">remove</i></button>
              </div>
            </div>
          </div>
          <div class="card pt-12 pt-md-9 pb-5 pb-md-8 px-5 px-md-11 mb-2">
            <button type="button" class="btn-close position-absolute top-0 start-0 mt-1 mb-2 ms-1" aria-label="Close"></button>
            <div class="d-flex justify-content-between">
              <div>
                <img src="./assets/images/exhibition-3.jpg" alt="高雄設計節" class="cart-img object-cover">
              </div>
              <div class="card-body py-0 ms-5">
                <h3 class="fs-6 fw-bold">高雄設計節</h3>
                <h4 class="fs-6">01 MAR — 31 AUG</h4>
                <h4 class="fs-6 text-dark">全票</h4>
                <h3 class="fs-5 fw-bold">NT$550</h3>
              </div>
              <div class="d-flex flex-column flex-md-row-reverse justify-content-center align-items-center">
                <button type="button" class="btn p-0"><i class="material-icons">add</i></button>
                <span class="fs-5 fw-bold py-1 px-md-3">01</span>
                <button type="button" class="btn p-0"><i class="material-icons">remove</i></button>
              </div>
            </div>
          </div>
        </div>
        <div class="offcanvas-footer d-flex justify-content-between align-items-center px-5 pt-10 pb-11">
          <h5 class="text-light mb-0">小計<sapn class="ms-8">NT$1150</sapn></h5>
          <a href="./checkout-1.html" type="button" class="btn btn-outline-primary bg-white btn-checkout fs-6">前往結帳</a>
        </div>
      </div>
    </div>

    <%- contents %>

